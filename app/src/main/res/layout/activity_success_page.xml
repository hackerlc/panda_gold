<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.success.SuccessPageActivity">
    <ImageView android:id="@+id/iv_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="@dimen/common_padding"
        android:layout_marginLeft="@dimen/common_padding"
        android:src="@drawable/bg_left"/>
    <TextView android:id="@+id/tv_title"
        android:layout_below="@id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="@dimen/common_padding"
        android:textSize="28dp"
        android:textColor="@android:color/white"
        tools:text="付款成功"/>
    <TextView android:id="@+id/tv_info"
        android:layout_below="@id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="@dimen/common_padding"
        android:layout_marginTop="@dimen/common_padding"
        android:textColor="@android:color/white"
        tools:text="您的包裹正在飞奔过来，注意签收"/>

    <RelativeLayout android:id="@+id/rl_pay"
        android:layout_below="@id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_common_corners_white_div"
        android:layout_margin="@dimen/common_padding"
        android:paddingLeft="@dimen/common_padding"
        android:paddingRight="@dimen/common_padding"
        android:paddingTop="30dp"
        android:paddingBottom="30dp">
        <TextView android:id="@+id/pay_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_padding"
            android:textColor="@color/colorTextMain_Title"
            android:text="下单后平台不会发送其他付款信息"/>
        <TextView android:id="@+id/pay_info"
            android:layout_below="@id/pay_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextMain_Title"
            android:text="谨防诈骗~"/>
        <Button android:id="@+id/btn_ok"
            android:layout_below="@id/pay_info"
            android:layout_marginTop="22dp"
            style="@style/Common_Btn"
            android:layout_width="186dp"
            android:text="查看订单"/>
        <Button android:id="@+id/btn_return"
            android:layout_below="@id/pay_info"
            android:layout_marginTop="22dp"
            android:layout_alignParentRight="true"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_common_corners_c620ea_div"
            android:text="返回首页"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"/>
    </RelativeLayout>
</RelativeLayout>