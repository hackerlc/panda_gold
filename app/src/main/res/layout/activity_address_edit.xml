<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.my.address.edit.AddressEditActivity">

    <include
        android:id="@+id/ic_head"
        layout="@layout/head_common" />
    <LinearLayout
        android:id="@+id/div"
        android:layout_below="@id/ic_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/common_padding"
            android:paddingRight="@dimen/common_padding"
            android:orientation="horizontal">
            <com.sk.panda.gold.view.ClearEditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@null"
                android:hint="请输入姓名"
                android:textSize="@dimen/common_edit_size"
                android:inputType="number"
                android:maxLength="11"
                android:textColor="@color/colorTextMain_Title"
                android:textColorHint="@color/colorTextSubordinate"
                tools:text="阿萨德"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_line_size"
            android:background="@color/colorLine" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/common_padding"
            android:paddingRight="@dimen/common_padding"
            android:orientation="horizontal">
            <com.sk.panda.gold.view.ClearEditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@null"
                android:hint="请输入手机号"
                android:textSize="@dimen/common_edit_size"
                android:inputType="number"
                android:maxLength="11"
                android:textColor="@color/colorTextMain_Title"
                android:textColorHint="@color/colorTextSubordinate"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_line_size"
            android:background="@color/colorLine" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="@dimen/common_padding"
            android:paddingRight="@dimen/common_padding">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="所在地区"
                android:textSize="@dimen/common_edit_size"
                android:textColor="@color/colorTextMain_Title"/>
            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/bg_my_item_right"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/tv_address_info"
                android:layout_toLeftOf="@id/iv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/common_edit_size"
                android:textColor="@color/colorTextMain_Title"
                tools:text="浙江省 杭州市 滨江区"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_line_size"
            android:background="@color/colorLine"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/common_padding"
            android:paddingRight="@dimen/common_padding"
            android:orientation="horizontal">
            <com.sk.panda.gold.view.ClearEditText
                android:id="@+id/et_message"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@null"
                android:hint="请输详细地址"
                android:textSize="@dimen/common_edit_size"
                android:inputType="number"
                android:maxLength="11"
                android:textColor="@color/colorTextMain_Title"
                android:textColorHint="@color/colorTextSubordinate"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_line_size"
            android:background="@color/colorLine" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="@dimen/common_padding"
            android:paddingRight="@dimen/common_padding">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="设置默认地址"
                android:textSize="@dimen/common_edit_size"
                android:textColor="@color/colorTextMain_Title"/>
            <Switch
                android:id="@+id/sw_touch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:thumb="@drawable/thumb"
                android:track="@drawable/track"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_line_size"
            android:background="@color/colorLine" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_ok"
        style="@style/Common_Btn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:text="保存并使用"/>
</RelativeLayout>