<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="6dp">
    <CheckBox
        android:id="@+id/cb_child_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"/>
    <ImageView
        android:id="@+id/iv_img"
        android:layout_toRightOf="@id/cb_child_all"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <TextView android:id="@+id/tv_name"
        android:layout_toRightOf="@id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        tools:text="阿斯顿撒大所大奥术大师多阿斯顿撒大所大奥术大师多"
        android:textColor="@color/colorTextMain_Title"
        android:maxLines="2"/>

    <TextView android:id="@+id/tv_spec"
        android:layout_below="@id/tv_name"
        android:layout_toRightOf="@id/iv_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textSize="12sp"
        tools:text="20g;14cm"/>

    <TextView android:id="@+id/tv_price"
        android:layout_toRightOf="@id/iv_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_img"
        android:textColor="@color/colorPrimaryAlf"
        tools:text="￥5000.00"/>

    <com.sk.panda.gold.view.AmountView android:id="@+id/av_amount"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/iv_img"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:btnWidth="45dp"
        app:btnTextSize="18sp"
        app:tvWidth="30dp"/>
</RelativeLayout>