<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.sk.panda.gold.ui.login.LoginActivity">
    <include android:id="@+id/ic_head"
        layout="@layout/head_common"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/ic_head"
        android:paddingTop="12dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.androidkun.xtablayout.XTabLayout
            android:id="@+id/tablatyou_attention1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/white"
            android:paddingBottom="10dp"
            app:xTabIndicatorColor="@color/colorPrimary"
            app:xTabIndicatorHeight="1dp"
            app:xTabIndicatorWidth="60dp"
            app:xTabMode="fixed"
            app:xTabSelectedTextColor="@color/colorPrimary"
            app:xTabSelectedTextSize="15sp"
            app:xTabTextColor="@color/colorPrimary"
            app:xTabTextSize="15sp" />

        <com.sk.panda.gold.view.CustomViewPager
            android:id="@+id/vp_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"/>

    </LinearLayout>

</RelativeLayout>
