<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    tools:background="@android:color/white">

    <ImageView android:id="@+id/iv_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginRight="@dimen/common_padding"/>

    <TextView android:id="@+id/tv_name"
        android:layout_toRightOf="@id/iv_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textSize="16sp"
        android:textColor="@color/colorTextMain_Title"
        tools:text="AAAAAAA上海"/>
    <TextView android:id="@+id/tv_tel"
        android:layout_below="@id/tv_name"
        android:layout_toRightOf="@id/iv_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/common_padding"
        android:textColor="@color/colorTextMain_Title"
        tools:text="联系方式：0571-8888 2401"/>
    <TextView android:id="@+id/tv_address"
        android:layout_below="@id/tv_tel"
        android:layout_toRightOf="@id/iv_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/colorTextMain_Title"
        tools:text="商户地址：浙江省杭州市滨江区某某路浙江省杭州市滨江区某某路"/>
    <CheckBox android:id="@+id/cb_choose"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignBaseline="@id/tv_name"
        android:layout_marginRight="6dp"
        android:layout_alignParentRight="true"/>
</RelativeLayout>