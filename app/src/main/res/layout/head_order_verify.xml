<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/bg_line"
    android:orientation="vertical">
    <TextView android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="@dimen/common_padding"
        android:textSize="28dp"
        android:textColor="@android:color/white"
        android:text="确认订单"/>
    <TextView android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="@dimen/common_padding"
        android:layout_marginTop="@dimen/common_padding"
        android:textColor="@android:color/white"
        android:text="请仔细核对以下信息，以免配送错误"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_common_corners_white_div">
        <TextView android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_margin="@dimen/common_padding"
            android:textColor="@color/colorTextMain_Title"
            android:text="其他信息"/>
        <TextView android:id="@+id/tv_change_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/common_padding"
            android:layout_marginTop="18dp"
            android:text="更改地址 〉"/>
        <View android:id="@+id/line1"
            android:layout_below="@id/text"
            style="@style/Common_Line"/>
        <TextView android:id="@+id/info_name_tel"
            android:layout_below="@id/line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_padding"
            android:layout_marginTop="@dimen/common_padding"
            android:layout_marginRight="20dp"
            android:text="客户信息"/>
        <TextView android:id="@+id/tv_name_tel"
            android:layout_below="@id/line1"
            android:layout_toRightOf="@id/info_name_tel"
            android:layout_alignBaseline="@id/info_name_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorTextMain_Title"
            tools:text="王小王 13125417451"/>
        <TextView android:id="@+id/info_address"
            android:layout_below="@id/tv_name_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_padding"
            android:layout_marginTop="@dimen/common_padding"
            android:layout_marginRight="20dp"
            android:text="配送地址"/>
        <TextView android:id="@+id/tv_address"
            android:layout_below="@id/tv_name_tel"
            android:layout_toRightOf="@id/info_address"
            android:layout_alignBaseline="@id/info_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorTextMain_Title"
            tools:text="王小王 13125417451王小王 13125417451王小王 13125417451王小王 13125417451"/>
        <TextView android:id="@+id/info_type"
            android:layout_below="@id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_padding"
            android:layout_marginTop="@dimen/common_padding"
            android:layout_marginRight="20dp"
            android:text="配送方式"/>
        <TextView android:id="@+id/tv_type"
            android:layout_below="@id/tv_address"
            android:layout_toRightOf="@id/info_type"
            android:layout_alignBaseline="@id/info_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textSize="16sp"
            android:textColor="@color/colorTextMain_Title"
            tools:text="王小王 13125417451"/>
    </RelativeLayout>


</LinearLayout>