<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.commodity.type.CommodityTypeActivity">
    <include android:id="@+id/ic_head" layout="@layout/head_common"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/tl_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:layout_centerVertical="true"
        android:gravity="center"
        app:tabTextColor="@color/colorTextMain_Title"
        app:tabSelectedTextColor="@color/colorTextMain_Title"
        app:tabIndicatorColor="@color/colorPrimary" />
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_fm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head_top">

    </android.support.v4.view.ViewPager>
</LinearLayout>