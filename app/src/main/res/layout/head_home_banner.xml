<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_div0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_padding"
            android:text="首页"
            android:textSize="26sp"
            android:textColor="@color/colorTextMain_Title"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="@dimen/common_padding"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_home_message"/>
    </RelativeLayout>
    <com.youth.banner.Banner
        android:id="@+id/br_view"
        android:layout_below="@id/rl_div0"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp" />

    <LinearLayout
        android:id="@+id/div2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/br_view"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/head_banner_left_right_margin"
        android:paddingRight="@dimen/head_banner_left_right_margin"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="平台"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快讯"
            android:textColor="@color/colorTextMain_Title"
            android:textStyle="bold" />

        <com.paradoxie.autoscrolltextview.VerticalTextview
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp" />

    </LinearLayout>

    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_height_size"
        android:layout_below="@id/div2" />

    <LinearLayout
        android:id="@+id/div1"
        style="@style/HomeBanner_LL"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:layout_below="@id/line3">

        <LinearLayout
            android:id="@+id/ll_item_1"
            style="@style/HomeBanner_LL_LL">

            <ImageView
                style="@style/HomeBanner_LL_LL_Img"
                android:src="@drawable/bg_home_head_itme_1" />

            <TextView
                style="@style/HomeBanner_LL_LL_Text"
                android:text="了解商城" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item_2"
            style="@style/HomeBanner_LL_LL">

            <ImageView
                style="@style/HomeBanner_LL_LL_Img"
                android:src="@drawable/bg_home_head_itme_2" />

            <TextView
                style="@style/HomeBanner_LL_LL_Text"
                android:text="商品分类" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item_3"
            style="@style/HomeBanner_LL_LL">

            <ImageView
                style="@style/HomeBanner_LL_LL_Img"
                android:src="@drawable/bg_home_head_itme_3" />

            <TextView
                style="@style/HomeBanner_LL_LL_Text"
                android:text="黄金咨询" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item_4"
            style="@style/HomeBanner_LL_LL">

            <ImageView
                style="@style/HomeBanner_LL_LL_Img"
                android:src="@drawable/bg_home_head_itme_4" />

            <TextView
                style="@style/HomeBanner_LL_LL_Text"
                android:text="品质保证" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_size"
        android:layout_below="@id/div1"
        android:background="@color/colorLine" />

    <RelativeLayout
        android:id="@+id/div3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line2"
        android:padding="@dimen/common_padding">

        <TextView
            android:id="@+id/tv_gold_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="258.00"
            android:textSize="26sp"
            android:textColor="@color/colorTextMain_Title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_gold_price"
            android:layout_toRightOf="@id/tv_gold_price"
            android:layout_marginLeft="6dp"
            android:textColor="@color/colorTextMain_Title"
            android:text="元/克"
            android:textSize="16sp"/>
        <ImageView
            android:id="@+id/gold_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_below="@id/tv_gold_price"
            android:src="@drawable/icon_home_gold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_below="@id/tv_gold_price"
            android:layout_toRightOf="@id/gold_icon"
            android:text="金价走势"/>
        <Button
            android:id="@+id/btn_buy"
            android:layout_width="106dp"
            android:layout_height="38dp"
            style="@style/Common_Btn"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:text="买入"
            android:textColor="@color/colorTextMain_Title"/>
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gold_icon"
            android:layout_marginTop="30dp"
            android:text="当日金价走势"/>
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lc_gold"
            android:layout_below="@id/text"
            android:layout_width="match_parent"
            android:layout_height="160dp"/>
    </RelativeLayout>

    <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_height_size"
        android:layout_below="@id/div3" />

    <LinearLayout
        android:id="@+id/div4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line4"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_padding"
            android:text="精品推荐"
            android:textColor="@color/colorTextMain_Title"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>